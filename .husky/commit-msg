# Simple conventional commit message validation
commit_regex='^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\(.+\))?: .{1,72}$'
commit_msg=$(head -n 1 "$1")

if ! echo "$commit_msg" | grep -qE "$commit_regex"; then
  echo "âŒ Invalid commit message format!"
  echo ""
  echo "ğŸ“ Commit message must follow Conventional Commits format:"
  echo "   <type>(<scope>): <subject>"
  echo ""
  echo "âœ… Examples:"
  echo "   feat: add user authentication"
  echo "   fix(api): resolve memory leak in data processor"
  echo "   docs: update README with new API endpoints"
  echo ""
  echo "ğŸ“š Types: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert"
  exit 1
fi